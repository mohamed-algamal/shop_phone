<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="custom_header_footer_sales_report">
        <t t-if="not o" t-set="o" t-value="doc"/>

        <t t-if="not company">
            <!-- Multicompany -->
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>
        <div class="header">
            <div class="text-center" style="border-bottom: 1px solid black;">
                <p t-out="context_timestamp(datetime.datetime.now()).strftime('%d-%m-%y %H: %M')"/>
            </div>
        </div>

        <div class="article o_report_layout_standard">
            <t t-out="0"/>
        </div>

        <div class="footer o_standard_footer">
            <div class="text-center" style="border-top: 1px solid black;">
                <ul class="list_inline mb-4">
                    <span t-field="company.report_footer"/>
                </ul>
            </div>
        </div>
    </template>

    <template id="report_sales_card_id">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="shop_phone.custom_header_footer_sales_report">
                    <div class="page">
                        <div>
                            <h4>Mohamed algamal</h4>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>
