<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- the tree view = list view -->
    <record id="view_sales_order_tree" model="ir.ui.view">
        <field name="name">sales.tree</field>
        <field name="model">sales</field>
        <field name="arch" type="xml">
            <tree>
                <field name="ref"/>
                <field name="total"/>
            </tree>
        </field>
    </record>

    <!-- the form view -->
    <record id="view_sales_order_form" model="ir.ui.view">
        <field name="name">sales.form</field>
        <field name="model">sales</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <div>
                                <h2>
                                    <label for="ref" string="Reference"/>
                                    <field name="ref"/>
                                </h2>
                            </div>
                        </group>
                        <group>
                            <div>
                                <h3>
                                    <label for="total" string="Total"/>
                                    <field name="total"/>
                                </h3>
                            </div>
                            <button name="action_test" string="test" class="bg-black" type="object"/>
                        </group>
                        <notebook>
                            <page string="Sales Accessories" name="sales_accessories">
                                <field name="sales_accessories_ids">
                                    <tree editable="bottom">
                                        <field name="accessories_id"/>
                                        <field name="count"/>
                                        <field name="count_found"/>
                                        <field name="price"/>
                                        <field name="sup_total"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <group>
                                                <field name="count_found"/>
                                            </group>
                                            <group>
                                                <field name="count"/>
                                                <field name="price"/>
                                                <field name="sup_total"/>
                                            </group>
                                        </group>
                                    </form>
                                </field>
                            </page>

                            <page string="Sales Electricity" name="sales_electricity">
                                <field name="sales_electricity_ids">
                                    <tree editable="bottom">
                                        <field name="electricity_id"/>
                                        <field name="count"/>
                                        <field name="count_found"/>
                                        <field name="price"/>
                                        <field name="sup_total"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <group>
                                                <field name="count_found"/>
                                            </group>
                                            <group>
                                                <field name="count"/>
                                                <field name="price"/>
                                                <field name="sup_total"/>
                                            </group>
                                        </group>
                                    </form>
                                </field>
                            </page>
                            <page string="Sales Internal" name="sales_internal">
                                <field name="sales_internal_ids">
                                    <tree editable="bottom">
                                        <field name="internal_id"/>
                                        <field name="count"/>
                                        <field name="count_found"/>
                                        <field name="price"/>
                                        <field name="sup_total"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <group>
                                                <field name="count_found"/>
                                            </group>
                                            <group>
                                                <field name="count"/>
                                                <field name="price"/>
                                                <field name="sup_total"/>
                                            </group>
                                        </group>
                                    </form>
                                </field>
                            </page>
                            <page string="Sales Mobiles" name="sales_mobiles">
                                <field name="sales_mobiles_ids">
                                    <tree editable="bottom">
                                        <field name="mobiles_id"/>
                                        <field name="count"/>
                                        <field name="count_found"/>
                                        <field name="price"/>
                                        <field name="sup_total"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <group>
                                                <field name="count_found"/>
                                            </group>
                                            <group>
                                                <field name="count"/>
                                                <field name="price"/>
                                                <field name="sup_total"/>
                                            </group>
                                        </group>
                                    </form>
                                </field>
                            </page>
                            <page string="Sales Petrine Work" name="sales_petrine_work">
                                <field name="sales_petrine_work_ids">
                                    <tree editable="bottom">
                                        <field name="petrine_work_id"/>
                                        <field name="count"/>
                                        <field name="count_found"/>
                                        <field name="price"/>
                                        <field name="sup_total"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <group>
                                                <field name="count_found"/>
                                            </group>
                                            <group>
                                                <field name="count"/>
                                                <field name="price"/>
                                                <field name="sup_total"/>
                                            </group>
                                        </group>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

