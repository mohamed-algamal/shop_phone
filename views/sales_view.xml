<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- the tree view = list view -->
    <record id="view_sales_order_tree" model="ir.ui.view">
        <field name="name">sales.tree</field>
        <field name="model">sales</field>
        <field name="arch" type="xml">
            <tree decoration-danger="state == 'prepare'" decoration-success="state == 'done'">
                <field name="ref"/>
                <field name="total"/>
                <field name="is_done" column_invisible="1"/>
                <field name="state" widget="badge" decoration-danger="state == 'prepare'"
                       decoration-success="state == 'done'"/>
            </tree>
        </field>
    </record>

    <!-- the form view -->
    <record id="view_sales_order_form" model="ir.ui.view">
        <field name="name">sales.form</field>
        <field name="model">sales</field>
        <field name="arch" type="xml">
            <form>
                <!-- create statusbar -->
                <header>
                    <!--options="{'clickable': '1'}" give you ability for click in the statusbar-->
                    <field name="state" widget="statusbar" nolabel="1"/>
                    <button name="action_done" string="Done" type="object" class="oe_highlight" icon="fa-check"
                            data-hotkey="z" invisible="state == 'done'" confirm="Are you sure for make done?"/>
                    <button name="action_print" string="Print" type="object" icon="fa-print"
                            data-hotkey="z" invisible="state != 'done'" confirm="Are you sure print this record?"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <div>
                                <h3>
                                    <label for="ref" string="Reference"/>
                                    <field name="ref"/>
                                </h3>
                            </div>
                        </group>
                        <group>
                            <div>
                                <h3>
                                    <label for="total" string="Total"/>
                                    <field name="total"/>
                                </h3>
                            </div>
                            <field name="state" invisible="1"/>
                            <field name="is_done" invisible="1"/>
                        </group>
                        <notebook>
                            <page string="Sales Accessories" name="sales_accessories">
                                <field name="sales_accessories_ids" readonly="is_done">
                                    <tree editable="bottom">
                                        <field name="accessories_id"/>
                                        <field name="category"/>
                                        <field name="count"/>
                                        <field name="count_found" column_invisible="parent.is_done, '==', True"/>
                                        <field name="price"/>
                                        <field name="sup_total"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <group>
                                                <field name="accessories_id"/>
                                                <field name="category"/>
                                                <field name="count_found"
                                                       column_invisible="parent.is_done, '==', True"/>
                                            </group>
                                            <group>
                                                <field name="count"/>
                                                <field name="price"/>
                                                <field name="sup_total"/>
                                            </group>
                                        </group>
                                    </form>
                                </field>
                            </page>

                            <page string="Sales Electricity" name="sales_electricity">
                                <field name="sales_electricity_ids" readonly="is_done">
                                    <tree editable="bottom">
                                        <field name="electricity_id"/>
                                        <field name="category"/>
                                        <field name="count"/>
                                        <field name="count_found"/>
                                        <field name="price"/>
                                        <field name="sup_total"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <group>
                                                <field name="electricity_id"/>
                                                <field name="category"/>
                                                <field name="count_found"/>
                                            </group>
                                            <group>
                                                <field name="count"/>
                                                <field name="price"/>
                                                <field name="sup_total"/>
                                            </group>
                                        </group>
                                    </form>
                                </field>
                            </page>
                            <page string="Sales Internal" name="sales_internal">
                                <field name="sales_internal_ids" readonly="is_done">
                                    <tree editable="bottom">
                                        <field name="internal_id"/>
                                        <field name="category"/>
                                        <field name="count"/>
                                        <field name="count_found"/>
                                        <field name="price"/>
                                        <field name="sup_total"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <group>
                                                <field name="internal_id"/>
                                                <field name="category"/>
                                                <field name="count_found"/>
                                            </group>
                                            <group>
                                                <field name="count"/>
                                                <field name="price"/>
                                                <field name="sup_total"/>
                                            </group>
                                        </group>
                                    </form>
                                </field>
                            </page>
                            <page string="Sales Mobiles" name="sales_mobiles">
                                <field name="sales_mobiles_ids" readonly="is_done">
                                    <tree editable="bottom">
                                        <field name="mobiles_id"/>
                                        <field name="category"/>
                                        <field name="count"/>
                                        <field name="count_found"/>
                                        <field name="price"/>
                                        <field name="sup_total"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <group>
                                                <field name="mobiles_id"/>
                                                <field name="category"/>
                                                <field name="count_found"/>
                                            </group>
                                            <group>
                                                <field name="count"/>
                                                <field name="price"/>
                                                <field name="sup_total"/>
                                            </group>
                                        </group>
                                    </form>
                                </field>
                            </page>
                            <page string="Sales Petrine Work" name="sales_petrine_work">
                                <field name="sales_petrine_work_ids" readonly="is_done">
                                    <tree editable="bottom">
                                        <field name="petrine_work_id"/>
                                        <field name="category"/>
                                        <field name="count"/>
                                        <field name="count_found"/>
                                        <field name="price"/>
                                        <field name="sup_total"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <group>
                                                <field name="petrine_work_id"/>
                                                <field name="category"/>
                                                <field name="count_found"/>
                                            </group>
                                            <group>
                                                <field name="count"/>
                                                <field name="price"/>
                                                <field name="sup_total"/>
                                            </group>
                                        </group>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </group>
                </sheet>
                <!-- chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/> <!-- inherit = ['mail.thread'] -->
                    <!--<field name="activity_ids"/> &lt;!&ndash; inherit = ['mail.activity.mixin'] &ndash;&gt;-->
                    <field name="message_ids"/> <!-- inherit = ['mail.thread'] -->
                </div>
            </form>
        </field>
    </record>

    <record id="view_sales_order_search" model="ir.ui.view">
        <field name="name">sales.search</field>
        <field name="model">sales</field>
        <field name="arch" type="xml">
            <search>
                <field name="ref"/>
                <field name="total"/>
                <filter name="filter_is_done" string="Done" domain="[('is_done','=',True)]"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_state" string="State" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <data>
        <!-- window action -->
        <record id="action_sales_order" model="ir.actions.act_window">
            <field name="name">Sales</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sales</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p>
                    create the record sales
                </p>
            </field>
        </record>
    </data>

    <data>
        <!-- the submenu -->
        <menuitem id="sales_order_menu"
                  name="Sales"
                  parent="sales_menu"
                  action="action_sales_order"
                  sequence="0"/>
    </data>
</odoo>